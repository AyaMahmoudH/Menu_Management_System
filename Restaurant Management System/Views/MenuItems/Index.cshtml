@model IEnumerable<Restaurant_Management_System.DTOs.MenuItemDto>
@{
    ViewData["Title"] = "Menu Items";
}

<div class="container-fluid py-3">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Menu Items</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="menuItemsTable" class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Status</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@Url.Content(item.ImageUrl)" class="img-thumbnail" style="width: 60px; height: 60px;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.CategoryName</td>
                                <td>$@item.Price.ToString("F2")</td>
                                <td>
                                    <span class="badge bg-@(item.IsAvailable ? "success" : "danger")">
                                        @(item.IsAvailable ? "Available" : "Unavailable")
                                    </span>
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        @await Html.PartialAsync("_MenuItemActions", item.Id)
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_MenuItemModal")

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="~/js/menuitems.js"></script>
}
