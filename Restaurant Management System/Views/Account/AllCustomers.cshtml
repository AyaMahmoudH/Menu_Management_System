@model X.PagedList.IPagedList<Restaurant_Management_System.Models.CustomerViewModel>

@{
    ViewData["Title"] = "All Registered Customers";
}

<h2 class="text-center mb-4"><i class="bi bi-people-fill text-primary"></i> All Registered Customers</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
            </tr>
        }
    </tbody>
</table>
@Html.Partial("_Pagination", Model)
