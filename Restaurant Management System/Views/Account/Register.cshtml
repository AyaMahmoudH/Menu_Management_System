@model Restaurant_Management_System.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen bg-gradient-to-br from-pink-400 via-pink-500 to-pink-600 flex items-center justify-center px-4">
    <div class="bg-white/90 backdrop-blur-md rounded-2xl shadow-2xl p-8 max-w-md w-full text-center animate-fade-in">
        <h2 class="text-3xl font-bold text-pink-700 mb-6">Create New Account 💕</h2>

        <form id="registerForm" method="post">
            @Html.AntiForgeryToken()

            <div>
                <label asp-for="FirstName" class="block mb-1 text-gray-700 font-medium"></label>
                <input asp-for="FirstName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="LastName" class="block mb-1 text-gray-700 font-medium"></label>
                <input asp-for="LastName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Email" class="block mb-1 text-gray-700 font-medium"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="Password" class="block mb-1 text-gray-700 font-medium"></label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="block mb-1 text-gray-700 font-medium"></label>
                <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <button type="submit" class="w-full bg-pink-500 hover:bg-pink-600 text-white py-2 rounded-lg font-semibold transition duration-300 transform hover:scale-105 shadow-md">
                🌸 Register
            </button>
        </form>
    </div>
</div>
@section Scripts {
    <script src="~/js/register.js"></script>
}